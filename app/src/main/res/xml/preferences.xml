<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_category_sync">
        <SwitchPreference
            android:defaultValue="false"
            android:key="pref_auto_sync_key"
            android:title="@string/pref_title_auto_back_sync" />

        <ListPreference
            android:entries="@array/pref_sync_frequency_titles"
            android:entryValues="@array/pref_sync_frequency_values"
            android:key="pref_sync_frequency_key"
            android:title="@string/pref_title_sync_frequency"
            android:persistent="true"
            android:defaultValue="@string/pref_sync_frequency_default_value"
            android:dependency="pref_auto_sync_key" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_notification">
    <SwitchPreference
        android:defaultValue="true"
        android:key="pref_notification_key"
        android:title="@string/pref_notification" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_category_theme">
        <ListPreference
            android:entries="@array/pref_theme_titles"
            android:entryValues="@array/pref_theme_values"
            android:key="pref_theme_key"
            android:title="@string/pref_theme"
            android:persistent="true"
            android:defaultValue="@string/pref_sync_frequency_default_value" />
    </PreferenceCategory>

